<h1>Items</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>price</th>
      <th>description</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= image_tag item.img_url %></th>
      <th><%= item.name %></th>
      <th><%= item.price %></th>
      <th><%= item.description %></th>
    </tr>
    <% end %>
  </tbody>
</table>
